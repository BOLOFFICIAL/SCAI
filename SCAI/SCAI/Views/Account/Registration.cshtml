@model SCAI.Models.Tables.DoctorRegistration

@{
    ViewBag.Title = "Регистрация";
}

<h2>Регистрация</h2>

@if (TempData["RegistrationMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["RegistrationMessage"]
    </div>
}

<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@500&family=Mulish:wght@200;300&display=swap" rel="stylesheet">
</head>

@using (Html.BeginForm("Registration", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        @Html.LabelFor(m => m.DoctorsLastName)
        @Html.TextBoxFor(m => m.DoctorsLastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DoctorsLastName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DoctorsFirstName)
        @Html.TextBoxFor(m => m.DoctorsFirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DoctorsFirstName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DoctorsMiddleName)
        @Html.TextBoxFor(m => m.DoctorsMiddleName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DoctorsPhoto)
        <input type="file" id="DoctorsPhoto" name="doctorsPhoto" accept="image/*" class="form-control-file" onchange="previewImage(this);" />
        <img id="imagePreview" src="#" alt="Выберите изображение" 
        style="max-width: 100%; max-height: 200px; display: none; border: 2px solid #2158b8; padding: 10px;" />
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.JobPosition)
        @Html.TextBoxFor(m => m.JobPosition, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.JobPosition, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Username)
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.UserPassword)
        @Html.PasswordFor(m => m.UserPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.UserPassword, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword)
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Зарегистрироваться" class="btn btn-primary" />
    </div>
}

<div>
    <p>Уже есть учетная запись? <a href="@Url.Action("Login", "Account")">Вход</a></p>
</div>