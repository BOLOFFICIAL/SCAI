@using Microsoft.AspNetCore.Http
@model SCAI.Models.Tables.DoctorLogin

@{
    ViewBag.Title = "Вход в учетную запись";
}

<h2>Вход</h2>

@if (TempData["LoginMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["LoginMessage"]
    </div>
}

<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@500&family=Mulish:wght@200;300&display=swap" rel="stylesheet">
</head>

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.Username)
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.UserPassword)
        @Html.PasswordFor(m => m.UserPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.UserPassword, "", new { @class = "text-danger" })
    </div>
    <br />
    <div class="form-group text-center">
        <input type="submit" value="Войти" class="btn btn-primary" />
    </div>
}
<br />
<div class="form-group text-center">
    <p>Нет учетной записи? <a href="@Url.Action("Registration", "Account")">Регистрация</a></p>
</div>